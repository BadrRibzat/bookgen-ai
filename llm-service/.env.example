# ============================================
# FastAPI Configuration
# ============================================
HOST=0.0.0.0
PORT=8001
DEBUG=True
RELOAD=True

# ============================================
# Database Configuration
# ============================================
# MongoDB connection (shared with backend)
DATABASE_URL=mongodb://bookgen:password@localhost:27017/bookgen_ai
MONGODB_DB_NAME=bookgen_ai

# SQLite for content mappings (legacy)
# LEGACY_SQLITE_URL=sqlite:///./data/llm_mappings.db

# ============================================
# Custom LLM Training Configuration
# ============================================
# Base model for fine-tuning
BASE_MODEL_NAME=distilgpt2
MODELS_DIR=./models
TRAINING_DATA_DIR=./data
OUTPUT_DIR=./output
LOGS_DIR=./logs

# Training parameters
DEFAULT_EPOCHS=3
DEFAULT_BATCH_SIZE=4
DEFAULT_LEARNING_RATE=5e-5
MAX_LENGTH=512
MAX_TRAINING_TIME_HOURS=6

# ============================================
# CORS Settings
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Mock LLM Settings
# ============================================
# Content generation settings
MIN_CHAPTER_LENGTH=500
MAX_CHAPTER_LENGTH=2000
DEFAULT_CHAPTERS=10

# ============================================
# Domain Whitelist
# ============================================
SUPPORTED_DOMAINS=business,marketing,technology

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

