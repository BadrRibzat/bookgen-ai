# ============================================
# FastAPI Configuration
# ============================================
HOST=your_app_running_host
PORT=your_app_running_port
DEBUG=True
RELOAD=True

# ============================================
# Database Configuration
# ============================================
# MongoDB Atlas (Shared with Backend) - Use SAME connection as backend/.env
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
MONGODB_DB_NAME=bookgen_ai

# SQLite for content mappings (legacy)
DATABASE_URL=sqlite:///./data/llm_mappings.db

# ============================================
# Custom LLM Training Configuration
# ============================================
# Base model for fine-tuning
BASE_MODEL_NAME=distilgpt2
MODEL_CACHE_DIR=./models
TRAINING_DATA_DIR=./data/training_sets

# Training parameters
DEFAULT_EPOCHS=3
DEFAULT_BATCH_SIZE=4
DEFAULT_LEARNING_RATE=5e-5
MAX_LENGTH=512
MAX_TRAINING_TIME_HOURS=6

# ============================================
# CORS Settings
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Mock LLM Settings
# ============================================
# Content generation settings
MIN_CHAPTER_LENGTH=500  # words Example
MAX_CHAPTER_LENGTH=2000  # words Example
DEFAULT_CHAPTERS=10 # chapters Example

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

