# ============================================
# Django Core Settings
# ============================================
DEBUG=True
SECRET_KEY=your_django_secret_key
ALLOWED_HOSTS=localhost,.......

# ============================================
# Database Configuration
# ============================================
# MongoDB Atlas (Production) or Local (Development)
DATABASE_URL=mongodb://your_app_admin:your_app_password@localhost:your_localhost/your_app_name?authSource=admin

# SQLite for development (alternative)
# DATABASE_URL=sqlite:///db.sqlite3

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://:bookgen_redis_password@localhost:your_port

# ============================================
# Celery Configuration
# ============================================
CELERY_BROKER_URL=redis://:your_app_redis_password@localhost:your_port
CELERY_RESULT_BACKEND=redis://:your_app_redis_password@localhost:your_port
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# ============================================
# Email Configuration
# ============================================
# For development: console backend (prints to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production: SMTP backend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=your_port
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=Your_App_Name <noreply@bookgen-ai.com>

# ============================================
# Cloudinary Configuration (File Storage)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://your-api-key:your-api-secret@your-cloud-name

# ============================================
# JWT Authentication Settings
# ============================================
JWT_ACCESS_TOKEN_LIFETIME=your_prefered_time  # minutes
JWT_REFRESH_TOKEN_LIFETIME=your_prefered_time  # minutes (7 days)
JWT_ALGORITHM=your_key

# ============================================
# CORS Settings
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# ============================================
# Frontend URL (for email links)
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLE=True
RATE_LIMIT_AUTH_ATTEMPTS=5
RATE_LIMIT_AUTH_WINDOW=900  # 15 minutes in seconds

# ============================================
# Security Settings (Production)
# ============================================
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/Your_App_Name

# ============================================
# External Services
# ============================================
LLM_SERVICE_URL=http://localhost:.....

# ============================================
# Development Settings
# ============================================
ENABLE_DEBUG_TOOLBAR=True
ENABLE_SILK_PROFILER=False
