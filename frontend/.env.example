# ============================================
# API Configuration
# ============================================
# Backend API URL (must be accessible from browser)
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Application URL (used for redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# Authentication
# ============================================
# Token storage key in localStorage
NEXT_PUBLIC_TOKEN_KEY=your_app_name_access_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=your_app_name_refresh_token

# ============================================
# Feature Flags
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false

# Brevo subscription preferences (optional)
NEXT_PUBLIC_SUPPORT_EMAIL=support@bookgen-ai.com

# ============================================
# External Services (Future)
# ============================================
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=
# NEXT_PUBLIC_GITHUB_CLIENT_ID=

# ============================================
# Development Settings
# ============================================
# Enable detailed error messages in development
NEXT_PUBLIC_SHOW_DEBUG_INFO=true

# ============================================
# Build Configuration
# ============================================
# NODE_ENV is automatically set by Next.js
# development | production | test
